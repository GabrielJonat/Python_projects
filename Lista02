2)

alter table Funcionario add (telefone varchar2(13));
a) update table Funcionario set telefone = '(15)3238-1188' where codFunc = 3;
b) delete from Funcionario where codDep = 300
c) select nomeFunc, (salario * 1.1) as aumento, dataAdmissao from Funcionario;
d) select from funcProj where bonus_sal != 0 and tempo_loc > 3;
e) select nomeFunc from Funcionario where dataAdmissao BETWEEN(to_date('01/01/2024'),sysdate);
f) select codDep from Funcionario;
g) alternativa c
h) select nomeFunc from Funcionario where salario BETWEEN(3000,5000);

